<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

<body>
  <%- include('../partials/header') %>

  <main class="main-content auth-page">
    <div class="container-fluid">
      <div class="auth-container">
        <div class="auth-card">
          <div class="auth-header">
            <h2 class="auth-title">Agregar Cita</h2>
            <p class="auth-subtitle">Programar una nueva cita médica</p>
          </div>

          <form id="add_new_appointment" class="auth-form">
            <!-- Campo condicional: Solo admins pueden seleccionar paciente -->
            <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
            <div class="mb-3">
              <label for="patientSelect" class="form-label">Seleccionar Paciente</label>
              <select class="form-control auth-input" id="patientSelect" name="patientId" required>
                <option value="">Seleccione un paciente registrado</option>
              </select>
              <small class="form-text text-muted">Como administrador, puedes agendar citas para cualquier paciente registrado.</small>
            </div>
            <% } else { %>
            <!-- Campos para usuario normal (solo para sí mismo) -->
            <div class="alert alert-info">
              <i class="bi bi-info-circle"></i> Esta cita será programada para: <strong><%= user.firstName %> <%= user.lastName %></strong>
            </div>
            <input type="hidden" id="isUserAppointment" value="true" />
            <% } %>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="dentistId" class="form-label">Odontólogo</label>
                <select class="form-control auth-input" id="dentistId" name="dentistId" required>
                  <option value="">Seleccione un odontólogo</option>
                </select>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="appointmentDate" class="form-label">Fecha</label>
                <input type="date" class="form-control auth-input" id="appointmentDate" name="appointmentDate" required />
              </div>
              <div class="col-md-6 mb-3">
                <label for="appointmentTime" class="form-label">Hora</label>
                <input type="time" class="form-control auth-input" id="appointmentTime" name="appointmentTime" required />
              </div>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Descripción / Motivo</label>
              <textarea class="form-control auth-input" id="description" name="description" rows="3" placeholder="Ingrese el motivo de la consulta"></textarea>
            </div>

            <button type="submit" class="btn auth-btn-primary w-100 mb-3" id="btn-add-new-appointment">
              <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                Programar Cita para Paciente
              <% } else { %>
                Solicitar Mi Cita
              <% } %>
            </button>

            <div class="auth-footer">
              <p><a href="/appointments" class="auth-link">← Volver a la lista de citas</a></p>
            </div>
          </form>

          <div id="response" class="mt-3" style="display: none;"></div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script src="/js/api/config.js"></script>
  <script src="/js/api/utils.js"></script>
  <script src="/js/api/dentist-api.js"></script>
  <script src="/js/api/patient-api.js"></script>
  <script src="/js/api/appointment-api.js"></script>

  <!-- Variables globales -->
  <script>
    window.currentUser = {
      id: '<%= user.id %>',
      firstName: '<%= user.firstName %>',
      lastName: '<%= user.lastName %>',
      email: '<%= user.email %>',
      role: '<%= user.role %>'
    };
    window.isAdmin = <%= locals.isAdmin ? 'true' : 'false' %>;
  </script>

  <!-- Controlador de Citas -->
  <script src="/js/client-controllers/appointment/appointment-controller.js"></script>
</body>

</html>