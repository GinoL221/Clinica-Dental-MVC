<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Lista de Dentistas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript" src="./js/get_dentist.js" defer></script>
    <script type="text/javascript" src="./js/update_dentist.js" defer></script>
    <script type="text/javascript" src="./js/delete_dentist.js" defer></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="index.html">Clínica Odontológica</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Gestión Odontólogos
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="dentistList.html"
                    >Listar odontólogos</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="dentistAdd.html"
                    >Agregar odontólogo</a
                  >
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <h1>Odontólogos</h1>

      <div class="table-responsive">
        <table id="dentistTable" class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Matrícula</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody id="dentistTableBody"></tbody>
        </table>
      </div>

      <div id="response" class="mt-3" style="display: none"></div>

      <div class="row mt-4">
        <div
          class="col-sm-6"
          id="div_dentist_updating"
          style="
            display: none;
            background-color: #e6fffa;
            padding: 10px;
            border-radius: 5px;
          "
        >
          <h4>Modificar Odontólogo</h4>
          <form id="update_dentist_form">
            <div class="form-group mb-2">
              <label>ID:</label>
              <input
                type="text"
                class="form-control"
                id="dentist_id"
                readonly
              />
            </div>
            <div class="form-group mb-2">
              <label>Matrícula:</label>
              <input type="text" class="form-control" id="registrationNumber" />
            </div>
            <div class="form-group mb-2">
              <label>Nombre:</label>
              <input type="text" class="form-control" id="name" />
            </div>
            <div class="form-group mb-3">
              <label>Apellido:</label>
              <input type="text" class="form-control" id="lastName" />
            </div>
            <button type="submit" class="btn btn-primary">Modificar</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
